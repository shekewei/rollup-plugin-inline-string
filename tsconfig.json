{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "removeComments": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/__tests__"]
}
